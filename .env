# ===== Steam ETL — Cloud (GCS + Firestore) =====

# Jeux cibles (utilise à la place un fichier si tu veux)
# APP_IDS=1158310,3527290
APP_IDS_FILE=apps.txt

# Bronze = fichiers RAW vers Google Cloud Storage
BRONZE_MODE=gcs
GCS_BUCKET=steamdb-raw-data            # ← ton bucket

# Silver/Gold = Firestore (Native mode)
FIRESTORE_PROJECT=steamdb-firestore  # ← ton Project ID GCP

# Airflow (web)
AIRFLOW_USER=admin
AIRFLOW_PWD=admin
AIRFLOW_PORT=8081



# API Steam
STEAM_NUM_PER_PAGE=100
STEAM_FILTER=updated
STEAM_REVIEW_TYPE=all
STEAM_PURCHASE_TYPE=all
STEAM_LANGUAGE=all
STEAM_DAY_RANGE=30

COMPOSE_PROJECT_NAME=steamdb
VERSION_CODENAME=jammy

AIRFLOW_PORT=8081
STREAMLIT_PORT=8501

AIRFLOW_UID=50000
AIRFLOW_GID=0


# Auth activée/désactivée (ON/OFF)
STREAMLIT_AUTH=ON

# Cookie (nom/clé/expiration jours)
AUTH_COOKIE_NAME=steamdb_auth
AUTH_COOKIE_KEY=super-secret-cookie-key-change-me
AUTH_COOKIE_EXPIRY_DAYS=7

# Un (ou plusieurs) utilisateurs sous forme JSON
# password = hash bcrypt (ci-dessous je t'explique comment le générer)
AUTH_USERS_JSON=[{"name":"Admin","username":"admin","password":"admin"}]


